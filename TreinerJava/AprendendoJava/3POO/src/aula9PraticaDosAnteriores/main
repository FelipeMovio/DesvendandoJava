        Pessoa p[] = new Pessoa[3];
        p[0] = new Pessoa("Pedro", 22, "M");
        p[1] = new Pessoa("Maria", 31, "F");
        p[2] = new Pessoa("João", 19, "M");

        Livro macaco = new Livro("O macaco e a banana", 100, p[0], "João da Silva");
        macaco.abrir();
        macaco.folhear(20);
        macaco.avancarPag();
        System.out.println(macaco.detalhes());